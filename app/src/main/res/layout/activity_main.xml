<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.smokescreem.shash.portfolioapp.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="My Nanodegree Apps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView2"
            android:textSize="18sp" />

        <Button
            android:text="POPULAR MOVIES"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:id="@+id/popular_movies"
            android:layout_below="@+id/textView2"
            android:layout_alignStart="@+id/stock_hawk"
            android:layout_alignEnd="@+id/stock_hawk" />

        <Button
            android:text="STOCK HAWK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stock_hawk"
            android:layout_below="@+id/popular_movies"
            android:layout_alignEnd="@+id/build_it_better"
            android:layout_alignStart="@+id/build_it_better" />

        <Button
            android:text="MAKE YOUR APP MATERIAL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/make_app_material"
            android:layout_below="@+id/build_it_better"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="GO UBIQUITOUS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/go_ubiquitous"
            android:layout_below="@+id/make_app_material"
            android:layout_alignStart="@+id/make_app_material"
            android:layout_alignEnd="@+id/make_app_material" />

        <Button
            android:text="CAPSTONE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/capstone"
            android:layout_marginTop="48dp"
            android:layout_below="@+id/make_app_material"
            android:layout_alignStart="@+id/go_ubiquitous"
            android:layout_alignEnd="@+id/go_ubiquitous" />

        <Button
            android:text="BUILD IT BIGGER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/build_it_better"
            android:layout_below="@+id/stock_hawk"
            android:layout_alignStart="@+id/make_app_material"
            android:layout_alignEnd="@+id/make_app_material" />
    </RelativeLayout>
</RelativeLayout>
